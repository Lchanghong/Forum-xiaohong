 <div class="container">
<div class="form-signin" >

  <h2 class="form-signin-heading">
      注册用户
  </h2>
  <% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg%></li>
  <% end %>
</ul>
<% end %>
  <%= form_for @user,url: :applicants_create do |f| %>
  注册账号:
  <%= f.text_field :name ,:class=>"input-block-level",:placeholder=>"" %>
  注册密码:
  <%= f.password_field :password , :class=>"input-block-level" ,:placeholder=>"请输入注册密码"%>
  确认密码:
  <%= f.password_field :password_confirmation,:class=>"input-block-level" ,:placeholder=>"请再次确认密码" %>
  <div class= "button">
   <%= f.submit ("注册账户"), data:{:"disable-with"=>"申请中,请稍后..."} ,:class=> "btn btn-large btn-info btn-block" %>
 </div>
   <% end %>

</div>

</div> 
